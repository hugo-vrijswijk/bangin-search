---
import '@fontsource-variable/inter';
import '../styles/global.css';
import { pwaInfo } from 'virtual:pwa-info';
import { pwaAssetsHead } from 'virtual:pwa-assets/head';
import { DEFAULT_BANG } from 'astro:env/server';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Bangin' Search</title>
    <meta name="description" content="Search the web with fast Bangs" />
    <link rel="search" type="application/opensearchdescription+xml" title="Bangin' Search" href={new URL('/opensearch.xml', Astro.url.origin)} />
    <script src="/src/pwa.ts"></script>
    {pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} />}
    {pwaAssetsHead.themeColor && <meta name="theme-color" content={pwaAssetsHead.themeColor.content} />}
    {pwaAssetsHead.links.map((link) => <link {...link} />)}
  </head>
  <body
    class="bg-gradient-to-br from-gray-50 via-zinc-50 to-stone-50 font-medium text-gray-800 antialiased dark:from-gray-900 dark:via-zinc-900 dark:to-stone-900 dark:text-gray-50 dark:scheme-dark"
    data-default-bang={DEFAULT_BANG}
  >
    <div class="flex-column flex h-screen items-center justify-center">
      <slot />

      <footer class="footer fixed right-0 bottom-4 left-0 text-center text-sm">
        <a
          href="https://github.com/hugo-vrijswijk/bangin-search"
          class="text-gray-500 hover:text-gray-600 dark:text-gray-400 dark:hover:text-gray-300"
          target="_blank">github</a
        >
      </footer>
    </div>
  </body>
</html>
