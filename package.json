{
  "name": "bang-search",
  "type": "module",
  "version": "1.5.5",
  "private": true,
  "main": "dist/server/entry.mjs",
  "scripts": {
    "check": "concurrently -c auto \"npm:lint:*\" \"npm:build\"",
    "lint:astro": "astro check",
    "lint:prettier": "prettier --check .",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "prepare": "bun run .husky/install.js",
    "test": "playwright test",
    "bangs:update": "curl https://raw.githubusercontent.com/kagisearch/bangs/refs/heads/main/data/bangs.json | jq 'sort_by(.t) | map([[.t] + (.ts // []), .u])' > src/bangs.json"
  },
  "devDependencies": {
    "@astrojs/check": "0.9.6",
    "@astrojs/node": "9.5.1",
    "@fontsource-variable/inter": "5.2.8",
    "@playwright/test": "1.57.0",
    "@tailwindcss/vite": "4.1.18",
    "@vite-pwa/assets-generator": "1.0.2",
    "@vite-pwa/astro": "1.2.0",
    "astro": "5.16.8",
    "concurrently": "9.2.1",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.7.4",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "tailwindcss": "4.1.18",
    "vite-plugin-pwa": "1.2.0",
    "workbox-precaching": "7.4.0",
    "workbox-window": "7.4.0"
  },
  "lint-staged": {
    "*.{js,mjs,ts,astro,css,md,json,yml}": "prettier --write"
  }
}
