{
  "name": "bang-search",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.7.1",
  "main": "dist/server/entry.mjs",
  "scripts": {
    "check": "concurrently -c auto \"npm:lint:*\" \"npm:build\"",
    "lint:astro": "astro check",
    "lint:prettier": "prettier --check .",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "prepare": "node .husky/install.js",
    "bangs:update": "wget -O src/bangs.json https://raw.githubusercontent.com/kagisearch/bangs/refs/heads/main/data/bangs.json"
  },
  "dependencies": {
    "@astrojs/node": "9.1.3",
    "astro": "5.5.6"
  },
  "devDependencies": {
    "@astrojs/check": "0.9.4",
    "@fontsource-variable/inter": "5.2.5",
    "@tailwindcss/vite": "4.0.17",
    "concurrently": "9.1.2",
    "husky": "9.1.7",
    "lint-staged": "15.5.0",
    "prettier": "3.5.3",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.6.11",
    "tailwindcss": "4.0.17"
  },
  "lint-staged": {
    "*.{js,mjs,ts,astro,css,md,json,yml}": "prettier --write"
  }
}
